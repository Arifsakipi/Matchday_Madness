@model MatchdayMadness2.Models.Teams


<h4>Teams</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="editTeamForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League" class="control-label"></label>
                <input asp-for="League" class="form-control" />
                <span asp-validation-for="League" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coach" class="control-label"></label>
                <input asp-for="Coach" class="form-control" />
                <span asp-validation-for="Coach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Formation" class="control-label"></label>
                <input asp-for="Formation" class="form-control" />
                <span asp-validation-for="Formation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stadium" class="control-label"></label>
                <input asp-for="Stadium" class="form-control" />
                <span asp-validation-for="Stadium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatchesPlayed" class="control-label"></label>
                <input asp-for="MatchesPlayed" class="form-control" />
                <span asp-validation-for="MatchesPlayed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wins" class="control-label"></label>
                <input asp-for="Wins" class="form-control" />
                <span asp-validation-for="Wins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loses" class="control-label"></label>
                <input asp-for="Loses" class="form-control" />
                <span asp-validation-for="Loses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Draws" class="control-label"></label>
                <input asp-for="Draws" class="form-control" />
                <span asp-validation-for="Draws" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-start align-items-center">
                <button type="submit" class="btn btn-danger btn-sm me-2" style="white-space: nowrap;">Save Changes</button>
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>

